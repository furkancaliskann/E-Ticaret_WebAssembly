@page "/login"
@using E_Ticaret_WebAssembly.Dtos
@using E_Ticaret_WebAssembly.Dtos.User
@inject AuthState AuthState
@inject NavigationManager NavManager
@inject HttpClient Http

<style>
    body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin: 0;
    padding: 0;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    }

    .container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: auto;
    padding: 15px;
    }

    .card {
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    width: 100%;
    max-width: 400px;
    }

    h3.text-center {
    font-size: 1.5rem;
    font-weight: 600;
    color: #007bff;
    margin-bottom: 20px;
    }

    .text-danger {
    color: #dc3545;
    }

    .form-control {
    font-size: 1rem;
    padding: 12px;
    border-radius: 5px;
    border: 1px solid #ccc;
    width: 100%;
    transition: border-color 0.3s ease;
    }

    .form-control:focus {
    border-color: #007bff;
    outline: none;
    }

    .btn {
    padding: 10px 15px;
    font-size: 1rem;
    border-radius: 5px;
    width: 100%;
    transition: background-color 0.3s ease;
    }

    .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    }

    .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
    }

    .mb-3 {
    margin-bottom: 20px;
    }

</style>

<div class="container">
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
        <h3 class="text-center">Giriş Yap</h3>
        <p class="text-danger text-center">@message</p>

        <div class="mb-3">
            <label class="form-label">Kullanıcı Adı</label>
            <input class="form-control" @bind="userName" placeholder="Kullanıcı Adı" />
        </div>

        <div class="mb-3">
            <label class="form-label">Şifre</label>
            <input class="form-control" @bind="password" type="password" placeholder="Şifre" />
        </div>

        <button class="btn btn-primary w-100" @onclick="LoginUser">Giriş Yap</button>
    </div>
</div>

@code {
    private string userName = "";
    private string password = "";
    private string message = "";

    protected override async Task OnInitializedAsync()
    {
        var getUserDto = await AuthState.GetAuthenticationStateAsync();

        if (getUserDto != null)
            NavManager.NavigateTo("/");
    }

    public async Task LoginUser()
    {
        var loginUserDto = new LoginUserDto
        {
            KullaniciAdi = userName,
            Parola = password
        };

        try
        {
            var response = await Http.PostAsJsonAsync("https://localhost:7144/api/users/login", loginUserDto);

            var result = await response.Content.ReadFromJsonAsync<Result>();

            if (result?.StatusCode == StatusCodeEnum.Ok)
            {
                await AuthState.MarkUserAsAuthenticated(loginUserDto.KullaniciAdi, loginUserDto.Parola);
                NavManager.NavigateTo("/");
            }
            else
            {
                message = result?.ErrorMessage ?? "Bilinmeyen bir hata oluştu.";
            }
        }
        catch (Exception ex)
        {
            message = $"Bir hata oluştu: {ex.Message}";
        }
    }

}
